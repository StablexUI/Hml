<VBox xmlns="sx.widgets" xmlns:haxe="http://haxe.org/" width="100%" height="100%" gap="10">
    <haxe:Private>
        <Popup id="alert">
            <Text text="'Very important message!'"/>
            <Button text="'OK'" onClick="alert.close();"/>
        </Popup>
    </haxe:Private>

    <ProgressBar value="Std.random(100)" interactive="true">
        <onChange>
            function(bar) {
                label.text = Math.round(bar.value) + '/' + bar.max;
            }
        </onChange>
        <VBox width="100%" height="100%" enabled="false">
            <Text id="label" text="'click this bar'"/>
        </VBox>
    </ProgressBar>

    <Button text="'Show alert'" right="20%" bottom="100dip" onClick="alert.show();" />

</VBox>